                td.price1 345.000
                  sup đ
                td= stt
                td.price1 345.000
                  sup đ
                td.trashbin
                  i.far.fa-trash-alt
            +table('HAMBURGUR BÒ','01')
            +table('RƯỢU VANG ĐỎ','02')
            +table('HAMBURGUR BÒ','01')
            +table('RƯỢU VANG ĐỎ','02')
        .row 
          .col-lg-7
          .col-lg-5.btlogin
            button#continue(href='login.html', type='submit') TIẾP TỤC MUA HÀNG
            button.comeback#delete(href='index.html') XÓA      
            button.comeback#update(href='index.html') CẬP NHẬT       
