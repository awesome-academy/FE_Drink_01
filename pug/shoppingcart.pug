html
  include ../include/head
  body
    include ../include/header
    .container.linkhead
      a Trang chủ /
      a.linkcontact(href='#') Giỏ hàng
      .linkhead-title
        h1 GIỎ HÀNG
        img(src='../image/titleleft-dark.png')
      .container.table-responsive
        table.table.table-bordered.stylecart
          thead
            tr
              -var array=['ẢNH','TÊN SẢN PHẨM','GIÁ','SỐ SP','TỔNG GIÁ','XÓA']
              each val in array
                th= val
          tbody
            mixin table (title,stt)
              tr
                td.imgcart
                  img(src='../image/giohang.jpg')
